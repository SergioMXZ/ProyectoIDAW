<%- include('partials/head') %>
<body id="body">
  <div class="container">
    <div class="abs-center ">
      <form 
        action="/signin" 
        method="post" 
        class="border form shadow-lg p-3"
      >
        <div id="logo">
          <h1><%= title %></h1>
          <img src="../public/images/logotipo.png" alt="logotipo">
        </div>
        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-danger mb-0 p-2">
            <% messages.forEach(message => { %> <%- message %> <% }); %>
          </div>
        <% } %> 
        <% if (successMessages && successMessages.length > 0) { %>
          <div class="alert alert-success mb-0 p-2">
            <% successMessages.forEach(message => { %> <%- message %> <% }); %>
          </div>
        <% } %>
        <div class="form-group ">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            class="form-control border"
          />
        </div>
        <div class="form-group ">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Password"
            class="form-control mb-3"
          />
        </div id="button-group">
          <button type="submit" value="Enviar" class="button btn btn-primary shadow">
            log in
          </button>
          <button type="reset" value="Borrar" class="button btn btn-danger shadow">
            delete
          </button>
          <a href="/signup" id="link" class="button btn btn-success"> sign up</a>
        </div>
      </form>
    </div>
  </div>
</body>
<%- include('partials/footer') %>
