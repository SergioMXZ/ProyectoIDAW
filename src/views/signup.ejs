<%- include('partials/head') %>
<style>

</style>
<body id="body">
  <div class="container">
    <div class="abs-center">
      <form
        action="/signup"
        method="post"
        class="border form shadow-lg p-3 mb-5"
      >
        <div id="logo">
          <h1><%= title %></h1>
          <img src="../public/images/logotipo.png" alt="logotipo">
        </div>
        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-danger mb-0 p-2">
            <% messages.forEach(message => { %> <%- message %> <% }); %>
          </div>
        <% } %>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            class="form-control border"
          />
        </div>
        <div class="form-group">
          <label for="nombre">Username</label>
          <input
            type="text"
            name="nombre"
            id="nombre"
            placeholder="Username"
            class="form-control"
          />
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Password"
            class="form-control mb-3"
          />
        </div>
        </div id="button-group">
          <button type="submit" value="Enviar" class="button btn btn-success shadow">
            sign up
          </button>
          <button type="reset" value="Borrar" class="button btn btn-danger shadow">
            delete
          </button>
          <a href="/signin" id="link" class="button btn btn-primary"> log in</a>
        </div>
      </form>
    </div>
  </div>
</body>
<%- include('partials/footer') %>
