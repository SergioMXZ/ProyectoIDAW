<%- include('./partials/head') %>
<body id="body-pag">
  <div class="container mt-4">
    <div class="col-md-6 mx-auto p-3">
      <h1 class="mb-4">Edit Product</h1>
      <% if (messages && messages.length > 0) { %>
      <div class="alert alert-danger mb-0 p-2">
        <% messages.forEach(message => { %> <%- message %> <% }); %>
      </div>
      <% } %>
      <form action="/editar/<%= producto.codigo %>" method="post">
        <div class="form-group">
          <label for="nombre">Name:</label>
          <input
            type="text"
            class="form-control"
            id="nombre"
            name="nombre"
            value="<%= producto.nombre %>"
            placeholder="Name product"
            required
          />
        </div>
        <div class="form-group">
          <label for="descripcion">Description:</label>
          <textarea
            class="form-control"
            id="descripcion"
            name="descripcion"
            placeholder="Description"
            required
          >
<%= producto.descripcion %></textarea
          >
        </div>
        <div class="form-group">
          <label for="precio">Price:</label>
          <input
            type="number"
            class="form-control"
            id="precio"
            name="precio"
            value="<%= producto.precio %>"
            placeholder="Price"
            required
            min="1"
          />
        </div>
        <div class="button-group">
          <button type="submit" class="button btn btn-primary m-2">
            Save Changes
          </button>
          <a href="/catalog" class="button btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</body>
<%- include('partials/footer') %>
